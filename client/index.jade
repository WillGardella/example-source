extends layout

block body
	nav.navbar.navbar-default(role='navigation')
	
		.navbar-header
		button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
			span.sr-only Toggle navigation
			span.icon-bar
			span.icon-bar
			span.icon-bar
		a.navbar-brand(href='#') RanteR
		#bs-example-navbar-collapse-1.collapse.navbar-collapse
			div(ng-show='rootModel.loginData.isLoggedIn')
				ul.nav.navbar-nav
					li.active
						a(href='#/wall') Wall
					li
						a(href='#/timeline') Time-line
			div(ng-show='!rootModel.loginData.isLoggedIn')
				form.navbar-form.navbar-right(role='form')
					.form-group
						label.sr-only(for='exampleInputUsername') Email address
						input#exampleInputUsername.form-control(type='username', placeholder='Enter Username', ng-model='model.username')
					.form-group
						label.sr-only(for='exampleInputPassword2') Password
						input#exampleInputPassword2.form-control(type='password', placeholder='Password', ng-model='model.password')
					.checkbox
						label
							input(type='checkbox')
							| Remember me
						button.btn.btn-default(type='submit',ng-click='events.login()') Sign in
						a(href='#/register').btn.btn-default Register
			div(ng-show='rootModel.loginData.isLoggedIn')
				label.nav.navbar-nav.navbar-right(ng-bind='rootModel.loginData.name')

	ng-view